# frozen_string_literal: true

create_table 'users', id: { type: :bigint, unsigned: true }, collation: "utf8mb4_general_ci", force: :cascade do |t|
  t.string 'username', null: false
  t.string 'email', null: false
  t.float 'goal_weight'
  t.float 'height'
  t.boolean 'display_body_fat', default: false
  t.boolean 'display_period', default: false
  t.datetime 'updated_at'
  t.datetime 'created_at'

  ## Required (Devise)
  t.string :provider, null: false, default: 'email'
  t.string :uid, null: false, default: ''

  ## Database authenticatable (Devise)
  t.string :encrypted_password, null: false, default: ''

  ## Recoverable (Devise)
  t.string   :reset_password_token
  t.datetime :reset_password_sent_at
  t.boolean  :allow_password_change, :default => false

  ## Rememberable (Devise)
  t.datetime :remember_created_at

  ## Confirmable (Devise)
  t.string   :confirmation_token
  t.datetime :confirmed_at
  t.datetime :confirmation_sent_at
  t.string   :unconfirmed_email # Only if using reconfirmable

  ## Lockable (Devise)
  # t.integer  :failed_attempts, :default => 0, :null => false # Only if lock strategy is :failed_attempts
  # t.string   :unlock_token # Only if unlock strategy is :email or :both
  # t.datetime :locked_at

  ## Tokens (Devise)
  t.text :tokens
end

add_index :users, :email,                unique: true
add_index :users, [:uid, :provider],     unique: true
add_index :users, :reset_password_token, unique: true
add_index :users, :confirmation_token,   unique: true
